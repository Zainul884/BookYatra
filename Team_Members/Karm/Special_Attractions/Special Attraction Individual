  display: flex;
  justify-content: space-between;
  flex-wrap: wrap; 
}

.accessibilitySectionSai, .whatsIncludedSectionSai {
  flex: 1; 
  min-width: 250px; 
  margin-right: 20px; 
}


.accessibilitySectionSai:last-child, .whatsIncludedSectionSai:last-child {
  margin-right: 0;
}



